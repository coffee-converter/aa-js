{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "es5",
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
