{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6",
      "esnext",
      "es2016",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/aajs.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
