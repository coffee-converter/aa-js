{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": true
  },
  "include": [
    "./src/**/*.ts",
    "./types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
